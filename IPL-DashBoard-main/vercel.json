{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/build",
  "crons": [
    {
      "path": "/api/warmup",
      "schedule": "*/10 * * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/v1/match/:path*",
      "destination": "https://ipl-dashboard-1-ff0d.onrender.com/match/:path*"
    },
    {
      "source": "/api/match/:path*",
      "destination": "https://ipl-dashboard-1-ff0d.onrender.com/match/:path*"
    },
    {
      "source": "/api/:path*",
      "destination": "https://ipl-dashboard-1-ff0d.onrender.com/api/:path*"
    }
  ]
}
